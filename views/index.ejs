  <!-- Begin Page Content -->
    <div class="container-fluid">
      <!-- Page Heading -->
      <div class="card shadow mb-4">
        <div class="card-body">
          <div class="table-responsive">

            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
              <table id="dataTable" class="table table-striped display">
                <thead>
                  <tr>
                    <th scope="col">Feature</th>
                    <th scope="col">Scenarios</th>
                  </tr>
                </thead>
                <tbody>
                  <% featureFiles.forEach(function(featureFile) { %>
                    <% if (featureFile && featureFile.path) { %>
                    <tr id="<%= featureFile.featureId %>">
                      <td>
                        <div class="d-flex gap-2 justify-content-left pt-1">
                          <!-- Tags -->
                          <% featureFile.feature.tags.forEach(function(tag) { %>
                            <span class="tag-label badge d-flex p-2 mr-1 align-items-center text-primary-emphasis bg-primary-subtle border border-primary-subtle rounded-pill">
                              <span onclick='addTagToInput("<%= tag.name %>")' contentEditable="true" onblur="updateFeature('', this.innerText)" class="px-1"><%= tag.name %>
                              </span> 
                              <a href="#" onclick="removeTag('<%= tag.name %>')">
                                <svg class="bi ms-1" width="16" height="16"><use xlink:href="#x-circle-fill"></use></svg>
                              </a>
                          </span>
                          <% }); %>
                          <span class="add-tag badge d-flex p-2 align-items-center text-primary-emphasis bg-primary-subtle border border-primary-subtle rounded-pill">
                            <a href="#" id="addTagInput" contentEditable="true" onfocus="handleTagInputFocus()" onblur="handleTagInputBlur()" onkeydown="handleTagInputKeyDown(event)">
                                + add tag
                            </a>
                          </span> 
                        </div>
                        <h5 class="fw-bold mb-0 fs-4 text-body-emphasis" contentEditable="true" onblur="updateFeature('<%= featureFile.featureId %>', 'feature.name', this.innerText)">
                          <%= featureFile.feature.name %>
                        </h5>
                        <p contentEditable="true" onblur="updateFeature('<%= featureFile.featureId %>', 'feature.description', this.innerText)">
                          <%= featureFile.feature.description %>
                        </p>
                      </td>
                      <td>
                        <ul class="list-unstyled">
                          <h6><%= featureFile.feature.children.length %> scenarios contained: </h6>
                          <% featureFile.feature.children.forEach(function(child, index) { %>
                            <% if (child.scenario) { %>
                              <li>
                                <div class="d-flex gap-2 justify-content-left pt-1">
                                  <!-- Tags -->
                                  <% child.scenario.tags.forEach(function(tag,tagIndex) { %>
                                    <span class="tag-label badge d-flex p-2 mr-1 align-items-center text-primary-emphasis bg-primary-subtle border border-primary-subtle rounded-pill">
                                      <span contentEditable="true" onblur='updateFeature("<%= featureFile.featureId %>", "feature.children[<%= index %>].scenario.tags[<%= tagIndex %>].name", this.innerText)' class="px-1"><%= tag.name %>
                                      </span> 
                                      <a href="#" onclick="removeTag('<%= featureFile.featureId %>', 'feature.children[' + '<%= index %>' + '].scenario.tags[' + '<%= tagIndex %>' + ']', '<%= tag.name %>')">
                                        <svg class="tag-delete bi ms-1" width="16" height="16"><use xlink:href="#x-circle-fill"></use></svg>
                                      </a>
                                    </span>
                                  <% }); %>
                                  <span class="add-tag badge d-flex p-2 align-items-center text-primary-emphasis bg-primary-subtle border border-primary-subtle rounded-pill">
                                    <a href="#" id="addTagInput" contentEditable="true" onfocus="handleTagInputFocus()" onblur="handleTagInputBlur()" onkeydown="handleTagInputKeyDown(event)">
                                        + add tag
                                    </a>
                                  </span>
                                </div>            
                                <h5 href="#" contentEditable="true" onblur="updateFeature('<%= featureFile.featureId %>', 'feature.children[' + '<%= index %>' + '].scenario.name', this.innerText)">
                                  <%- child.scenario.name %>
                                  <% if (child.scenario.isOutline) { %>
                                    <span>(Outline)</span>
                                  <% } %>
                                </h5> 
                                <% if (child.scenario.description) { %>
                                  <p contentEditable="true" onblur="updateFeature('<%= featureFile.featureId %>', 'feature.children[' + '<%= index %>' + '].scenario.description', this.innerText)">
                                    <%= child.scenario.description %>
                                  </p>
                                <% } %>
                              </li>
                            <% } %>
                          <% }); %>
                        </ul>
                      </td>
                    </tr>
                    <% } %>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
